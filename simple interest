#include <stdio.h>

int main()
{
    float principal,rate,years,interest, discount, amount,final;
    scanf("%f %f %f",&principal,&rate,&years);
    interest=(principal*rate*years)/100;
    amount=principal + interest;
    discount=(interest*2)/100;
    final=amount-discount;
    printf("%.2f\n",interest);
    printf("%.2f\n",amount);
    printf("%.2f\n",discount);
    printf("%.2f\n",final);
    
return 0;
}simple 
